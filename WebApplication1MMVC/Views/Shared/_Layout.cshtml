                        <li class="nav-item dropdown">
                          <a class="nav-link dropdown-toggle" asp-controller="Home" asp-action="follow_us" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                          </a>
                          <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="Home" asp-action="Index">Home page</a></li>
                            <li><a class="dropdown-item" asp-controller="Home" asp-action="privacy">Google</a></li>
                            <li><a class="dropdown-item" href="#">Something else here</a></li>
                          </ul>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Product">Product</a>
                        </li>
